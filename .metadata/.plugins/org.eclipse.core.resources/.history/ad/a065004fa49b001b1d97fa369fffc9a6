#pragma once
#include <EventMachine.hpp>

class EventMachine;

class AbstractState
{
public:
	virtual void doBehavior() = 0;
	virtual ~AbstractState();


protected:
  void setState(EventMachine &machine, AbstractState *st);

};

class FxDisabledState : AbstractState
{
public:
	virtual void doBehavior();
};

class FxEnabledState : AbstractState
{
public:
	virtual void doBehavior();
};



