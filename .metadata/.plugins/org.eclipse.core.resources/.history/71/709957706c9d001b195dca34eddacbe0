#ifndef FREERTOS_RTOSTASKMANAGER_HPP_
#define FREERTOS_RTOSTASKMANAGER_HPP_


class RtosTaskManager
{
	const uint32_t STACK_SIZE 200
	TaskHandle_t ISRTaskHandle = NULL;
	StaticTask_t ISRTaskBuffer;
	StackType_t ISRTaskStack[ STACK_SIZE ];

	const uint32_t QUEUE_LENGTH    1
	const uint32_t ITEM_SIZE       sizeof( uint16_t )
	static StaticQueue_t xStaticQueue;
	uint8_t ucQueueStorageArea[ QUEUE_LENGTH * ITEM_SIZE ];
	QueueHandle_t xQueue;
};


#endif /* FREERTOS_RTOSTASKMANAGER_HPP_ */
