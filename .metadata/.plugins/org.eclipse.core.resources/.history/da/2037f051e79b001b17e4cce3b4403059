#pragma once
#include <EventMachine.hpp>

#include <stdint.h>

class EventMachine;


class AbstractState
{

public:

	virtual void evFootswitchA(EventMachine *machine) = 0;
	virtual void evFootswitchB(EventMachine *machine) = 0;

	virtual ~AbstractState();

protected:

	void setState(EventMachine *machine, AbstractState *st);

};



class FxDisabledState : public AbstractState
{
public:


	virtual void evFootswitchA(EventMachine *machine);
	virtual void evFootswitchB(EventMachine *machine);
};

class FxEnabledState : public AbstractState
{
public:

	virtual void evFootswitchA(EventMachine *machine);
	virtual void evFootswitchB(EventMachine *machine);
};



