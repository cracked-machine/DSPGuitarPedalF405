#pragma once
#include <EventMachine.hpp>

#include <stdint.h>

class EventMachine;



class AbstractState
{
public:
	//virtual void doBehavior() = 0;
	virtual void update(EventMachine &machine) = 0;

protected:

  void setState(EventMachine &machine, AbstractState *st);

};



class FxDisabledState : AbstractState
{
public:
	FxDisabledState(uint8_t _id);
	virtual void update(EventMachine &machine);
};

class FxEnabledState : AbstractState
{
public:
	virtual void update(EventMachine &machine);
};



