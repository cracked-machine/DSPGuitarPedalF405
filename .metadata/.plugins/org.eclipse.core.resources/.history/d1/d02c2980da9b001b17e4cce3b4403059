#include "EventMachine.hpp"


#ifdef __cplusplus
	extern "C"
	{
#endif

EventMachine::EventMachine()
{
	states_list[EventMachine::FX_DISABLED] = FxDisabledState();
	states_list[EventMachine::FX_ENABLED] = FxEnabledState();


	state = states_list[EventMachine::FX_DISABLED];
}

EventMachine::~EventMachine()
{
	for(AbstractState *s : states_list)
	{
		delete s;
	}
}

void EventMachine::update()
{
	state->update(this);
}

AbstractState * EventMachine::getState()
{
	return state;
}

#ifdef __cplusplus
	}
#endif
