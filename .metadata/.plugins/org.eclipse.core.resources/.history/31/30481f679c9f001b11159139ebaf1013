	virtual void evUserSwitchA(EventMachine *machine) = 0;
	virtual void evUserSwitchB(EventMachine *machine) = 0;
	virtual void evRotaryEncoderA(EventMachine *machine) = 0;
	virtual void evRotaryEncoderB(EventMachine *machine) = 0;
*/
	virtual void evFootswitchA(AbstractStateMachine *machine) = 0;
	virtual void evFootswitchB(AbstractStateMachine *machine) = 0;
	virtual void evUserSwitchA(AbstractStateMachine *machine) = 0;
	virtual void evUserSwitchB(AbstractStateMachine *machine) = 0;
	virtual void evRotaryEncoderA(AbstractStateMachine *machine) = 0;
	virtual void evRotaryEncoderB(AbstractStateMachine *machine) = 0;

	virtual ~AbstractState();

