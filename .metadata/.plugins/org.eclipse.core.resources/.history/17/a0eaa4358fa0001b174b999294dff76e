#ifndef DSP_ABSTRACTFX_HPP_
#define DSP_ABSTRACTFX_HPP_



using namespace std;

#include "stdint.h"
#include <array>

#include "arm_math.h"



class AbstractFx
{

public:
	AbstractFx();
	virtual ~AbstractFx();

	static const size_t BLOCK_SIZE_U16 = 2048;
	static const size_t STEREO_BLOCK_SIZE_U16 = (AbstractFx::BLOCK_SIZE_U16 * 2);

	typedef array<uint16_t, AbstractFx::STEREO_BLOCK_SIZE_U16> stereoBlockArrayU16_t;

	virtual void process_half_u16(	stereoBlockArrayU16_t *pRxBuf,
									stereoBlockArrayU16_t *pTxBuf);

	virtual void process_full_u16(	stereoBlockArrayU16_t *pRxBuf,
									stereoBlockArrayU16_t *pTxBuf);

	virtual void process_all_u16(	stereoBlockArrayU16_t *pRxBuf,
									stereoBlockArrayU16_t *pTxBuf);

private:

};


template <size_t S>
using my_array = std::array<uint16_t, S>;

my_array<AbstractFx::BLOCK_SIZE_U16> cheese;


#endif /* DSP_ABSTRACTFX_HPP_ */
