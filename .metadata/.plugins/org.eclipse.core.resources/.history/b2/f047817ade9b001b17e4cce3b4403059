#pragma once
#include <EventMachine.hpp>

#include <stdint.h>

class EventMachine;



class AbstractState
{

public:

	enum event
	{
		evFootSwA,
		evFootSwB,
		evUserSwA,
		evUserSwB,
	};

	virtual void update(EventMachine *machine, AbstractState::event event) = 0;
	virtual ~AbstractState();



protected:



	void setState(EventMachine *machine, AbstractState *st);

};



class FxDisabledState : public AbstractState
{
public:
	FxDisabledState();
	virtual void update(EventMachine *machine);
};

class FxEnabledState : public AbstractState
{
public:
	virtual void update(EventMachine *machine);
};



