#include "AbstractFx.hpp"


AbstractFx::AbstractFx()
{

}

AbstractFx::~AbstractFx()
{

}

void AbstractFx::setBufferState(AbstractFx::BufferState pBufferState)
{
	bufferState = pBufferState;
}

AbstractFx::BufferState AbstractFx::toggleBufferState()
{
	if (bufferState) { bufferState = BufferState::HALF; }
	else { bufferState = BufferState::FULL; }
	return bufferState;
}

AbstractFx::BufferState AbstractFx::getBufferState()
{
	return bufferState;
}
